<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout
        android:background="@drawable/backgroundframe"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="220dp">

        <ImageView
            android:layout_marginTop="15dp"
            android:layout_marginStart="103dp"
            android:layout_marginEnd="103dp"
            android:layout_gravity="center"
            android:background="@drawable/layer_52"
            android:layout_width="100dp"
            android:layout_height="50dp"/>
        <include
            android:layout_marginTop="-50dp"
            layout="@layout/app_bar_main2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/recyler1"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

            android:layout_gravity="center"
            android:layout_width="320dp"
            android:layout_height="100dp"/>

    </LinearLayout>
  <!--  <include
        layout="@layout/app_bar_main2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="400dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40sp">
                <TextView
                    android:fontFamily="@font/my_custom_font"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="13dp"
                    android:textColor="#515151"
                    android:textSize="14sp"

                    android:text="Our Product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:fontFamily="@font/my_custom_font"
                    android:gravity="right"
                    android:layout_marginEnd="15dp"
                    android:textColor="#a8a8a8"
                    android:textSize="14sp"

                    android:text="View More"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
   <HorizontalScrollView
        android:layout_marginTop="-15dp"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout

            android:orientation="vertical"
            android:layout_width="70dp"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"

                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                android:layout_height="60dp">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/mobile"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:fontFamily="@font/my_custom_font_semi_bold"
                android:textSize="10sp"
                android:textColor="#515151"
                android:gravity="center"
                android:text="Mobile"
                android:layout_width="60dp"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="70dp"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                android:layout_height="60dp">
               <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/electonic"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
            </androidx.cardview.widget.CardView>
            <TextView
                 android:fontFamily="@font/my_custom_font_semi_bold"
                android:textStyle="bold"
                android:textSize="10sp"
                android:textColor="#515151"
                  android:gravity="center"
                android:text="Electronic"
                android:layout_width="60dp"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="70dp"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                android:layout_height="60dp">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/fashion"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
            </androidx.cardview.widget.CardView>
            <TextView
               android:fontFamily="@font/my_custom_font_semi_bold"
                android:textSize="10sp"
                android:textColor="#515151"
                 android:gravity="center"
                android:text="Fashion"
                android:layout_width="60dp"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="70dp"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                android:layout_height="60dp">
               <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/kids"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:fontFamily="@font/my_custom_font_semi_bold"
                android:textSize="10sp"
                android:textColor="#515151"
                android:gravity="center"
                android:text="Kids"
                android:layout_width="60dp"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="70dp"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardUseCompatPadding="true"
                    android:layout_height="60dp">
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:src="@drawable/automo" />
                </androidx.cardview.widget.CardView>
                <TextView
                  android:fontFamily="@font/my_custom_font_semi_bold"
                    android:textSize="10sp"
                    android:textColor="#515151"
                    android:gravity="center"
                    android:text="Mobile"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
        </LinearLayout>








    </HorizontalScrollView>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:fontFamily="@font/my_custom_font"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="13dp"
            android:textColor="#515151"
            android:textSize="14sp"
            android:text="Our Product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:fontFamily="@font/my_custom_font"
            android:gravity="right"
            android:layout_marginEnd="15dp"
            android:textColor="#a8a8a8"
            android:textSize="14sp"
           android:id="@+id/viewmore"
            android:text="View More"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rectrecycler"
        android:layout_width="match_parent"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:layout_height="160dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

        />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rectrecycler2"
                    android:layout_width="match_parent"
                    android:layout_marginStart="13dp"
                    android:layout_marginEnd="13dp"
                    android:layout_height="180dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

                    />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

  <LinearLayout
           android:orientation="vertical"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <LinearLayout
              android:orientation="horizontal"
              android:id="@+id/car"
              android:layout_marginTop="27dp"
              android:background="@drawable/rounded_rectangle_4"
              android:layout_width="match_parent"
              android:layout_height="100dp">
              <LinearLayout
                  android:gravity="center"
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:layout_height="match_parent">
                  <ImageView
                      android:src="@drawable/sreach"
                      android:layout_width="30dp"
                      android:layout_height="30dp"/>



              </LinearLayout>
              <LinearLayout
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"/>
              <LinearLayout
                  android:gravity="center"
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:layout_height="match_parent">
                  <ImageView
                      android:src="@drawable/contact"
                      android:layout_width="30dp"
                      android:layout_height="30dp"/>




              </LinearLayout>








          </LinearLayout>

          <androidx.cardview.widget.CardView
              android:id="@+id/crdd"
              android:layout_centerHorizontal="true"
              android:layout_width="60dp"
              android:layout_marginStart="150dp"
              app:cardCornerRadius="360dp"
              android:layout_height="60dp">
              <LinearLayout
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
                  <ImageView
                      android:id="@+id/scanqr"
                      android:layout_marginTop="15dp"
                      android:src="@drawable/ic_qr_code"
                      android:layout_gravity="center"
                      android:layout_width="25dp"
                      android:layout_height="25dp"/>
                  <TextView
                    android:gravity="center"
                      android:text="scan"
                      android:textColor="@color/text"
                      android:fontFamily="@font/my_custom_font_regular"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"/>



              </LinearLayout>
           <!--   <ImageView
                  android:src="@drawable/electonic"
                  android:layout_gravity="center"
                  android:layout_width="25dp"
                  android:layout_height="25dp"/>
              <TextView

                  android:layout_gravity="bottom"
                  android:text="scan"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>-->




          </androidx.cardview.widget.CardView>


      </RelativeLayout>



    </LinearLayout>

</LinearLayout>

